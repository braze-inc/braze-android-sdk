<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="250dp">

        <!-- Section for Refreshing Banners by Placement ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Banners by Placement ID"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sailec_bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/refresh_banners_input_layout"
            style="@style/DroidboyOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="List of placement ID(s) (comma-separated)"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/refresh_banners_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseWidget.DroidboyTextInput"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/refresh_banners_button"
            style="@style/DroidboyOutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Banners Refresh"
            android:layout_marginBottom="24dp"/>

        <!-- Section for Displaying a Specific Banner by its Unique ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Banner by Placement ID"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sailec_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cached Placement IDs:"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/sailec_bold"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cached_placement_ids_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:chipSpacing="8dp"
            app:singleLine="false" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/get_banner_input_layout"
            style="@style/DroidboyOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Banner placement ID"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/get_banner_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseWidget.DroidboyTextInput"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/get_banner_button"
            style="@style/DroidboyOutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display This Banner"
            android:layout_marginBottom="24dp"/>

        <!-- Banner Display Area -->
        <TextView
            android:id="@+id/current_banner_placement_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Banner Displayed: N/A"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/sailec_bold"/>

        <com.braze.ui.banners.BannerView
            android:id="@+id/banners_fragment_banner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:color/darker_gray"
            android:minHeight="100dp" />

        <!-- Banner Properties Display Area -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banner Properties"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sailec_bold"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Filter properties by type:"
          android:fontFamily="@font/sailec_bold" />

        <!-- Property Filter Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/property_filter_spinner_layout"
            style="@style/DroidboyOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Filter Properties by Type"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/property_filter_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/banner_properties_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
